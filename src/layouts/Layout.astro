---
import "../styles/global.css";
import { Image } from "astro:assets";
import GithubIcon from "../assets/github-mark-white.svg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- TODO add favicon -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-stone-900 h-screen overflow-hidden">
    <header class="absolute top-4 right-4">
      <a href="https://github.com/grbrlks/its-wednesday-my-dudes">
        <Image src={GithubIcon} alt="Github" class="w-8 h-8 fill-slate-400" />
      </a>
    </header>
    <slot />
  </body>
</html>
